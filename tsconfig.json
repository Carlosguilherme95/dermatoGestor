{
  "compilerOptions": {
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false // Temporariamente desabilitado para facilitar o desenvolvimento
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
